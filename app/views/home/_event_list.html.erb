<table class='eventListing'>
  <% @events.each do |event| %>     
    <tr class="<%=cycle('even','odd')%>">
      <td class='icon'>
        <%= image_tag("handdrawn/32x32/hint.png") %> 
      </td><td class='time'>
        <strong><%= event.start_time.to_s(:short) %></strong>
      </td>
      <td class='info'>
        <h1><%= event.title%></h1>
        <p><%= event.description %></p>
      </td>
      <td>
        <%= fb_share_button(event_url(event)) %>
      </td>
    </tr>
  <% end %>
</table>

