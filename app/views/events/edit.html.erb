<h1>Editing event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>
  <p>
    <%= f.label :finish_time %><br />
    <%= f.datetime_select :finish_time %>
  </p>
  <p>
    OR <%= check_box_tag :no_finish_time, 1, @event.finish_time.nil? %> <label for='no_finish_time'>This event has no known finish time.</label>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<ul class='flat'>
  <%= render :partial => 'event_nav' %>
</ul>
