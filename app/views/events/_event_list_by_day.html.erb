    <h2>Tomorrow</h2>
    <%= render :partial => 'events/event_list', :locals => {:events => @tomorrow_events} %>
    <h2>Later</h2>
    <%= render :partial => 'events/event_list', :locals => {:events => @later_events} %>
  </div>
