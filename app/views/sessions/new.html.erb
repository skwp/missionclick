<h3>Have a Facebook account?</h3>
<p>Log in with one click by clicking the button below.</p>
<%= facebook_sign_in_link :user %>

<%= spacer %>

<div style='float:left; width: 400px;'>
<% form_for resource_name, resource, :url => session_path(resource_name) do |f| -%>
  <fieldset>
    <legend>Sign In</legend>
      <ul class='form'>
        <li class='label'><%= f.label :email %></li>
        <li><%= f.text_field :email %></li>

        <li class='label'><%= f.label :password %></li>
        <li><%= f.password_field :password %></li>

        <% if devise_mapping.rememberable? -%>
          <li><%= f.check_box :remember_me %> <%= f.label :remember_me %></li>
        <% end -%>

        <li><%= f.submit "Sign in" %></li>
      </ul>
  </fieldset>
<% end -%>
</div>

<div style='float:left; margin-left: 24px; width:400px'>
  <% form_for resource_name, resource, :url => registration_path(resource_name) do |f| -%>
  <%= f.error_messages %>
    <fieldset>
      <legend>Sign Up</legend>
      <ul class='form'>
        <li class='label'><%= f.label :email %></li>
        <li><%= f.text_field :email %></li>

        <li class='label'><%= f.label :password %></li>
        <li><%= f.password_field :password %></li>

        <li class='label'><%= f.label :password_confirmation %></li>
        <li><%= f.password_field :password_confirmation %></li>

        <li><%= f.submit "Sign up" %></li>
      </ul>
    </fieldset>
<% end -%>
</div>

<%= spacer %>

<%= render :partial => "shared/devise_links" %>
